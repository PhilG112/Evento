<h1>Evento</h1>

<div id="main_event">
    <%= link_to(image_tag(@main_event.image, style: "width: 1000px", class: "img-responsive"), event_path(@main_event.id)) %>
</div>
<hr>

<div id="other_events">
    <% @events.each do |e| %>
      <%= link_to(image_tag(e.image, style: "width: 200px"), event_path(e.id)) %>
      <hr>
    <% end %>
</div>

<div id="today">
  <a href="/today">What's On Today</a>
</div>

<div id="this_week">
  <a href="/this_week">This Week</a>
</div>

<div id="this_month">
  <a href="/this_month">This Month</a>
</div>
