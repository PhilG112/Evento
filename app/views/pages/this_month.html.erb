
<h1>This Month <br>
    <small>Find out what goes on in the next 30 days and plan your month of fun ahead!</small>
</h1>

<div class="container">
    <div class="row">
      <% @month_events.each do |m| %>
        <div class="col-sm-4">
            <div class="col-sm-12 thumbnail text-center img-responsive">
                <%= link_to(image_tag(m.image, style: "width: 300px; height: 200px; margin-bottom: 20px;", class: "img-responsive"), event_path(m.id) ) %>
                <div class="caption">
                    <h4><strong><%= link_to(m.name, event_path(m), style: "color: #fff; text-shadow: 5px 5px 5px black;") %></strong></h4>
                </div>
            </div>
        </div>
      <% end %>
    </div>
</div>
