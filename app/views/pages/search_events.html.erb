<h1>Search Results <br>
    <small>There you go!</small>
</h1>

<div class="container">
    <div class="row">
      <% @events.flatten.each do |e| %>
        <div class="col-sm-4">
            <div class="col-sm-12 thumbnail text-center img-responsive">
                <%= link_to(image_tag(e.image, style: "width: 300px; height: 200px; margin-bottom: 20px;", class: "img-responsive"), event_path(e.id) ) %>
                <div class="caption">
                    <h4><strong><%= link_to(e.name, event_path(e), style: "color: #fff; text-shadow: 5px 5px 5px black;") %></strong></h4>
                </div>
            </div>
        </div>
      <% end %>
    </div>
</div>
